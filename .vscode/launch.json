{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Preprocess Dataset",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "powershell.exe",
            "args": [
                "-File",
                "${workspaceFolder}/scripts/conda-run.ps1",
                "${workspaceFolder}/build/bin/Debug/preprocess_dataset.exe",
                // "--dataset", "C:\\Users\\anton\\Documents\\Uni\\Hugging Face\\shapenet_data_uncompressed",
                "--dataset", "${workspaceFolder}/generated_files/Query/",
                "--output-geometry", "${workspaceFolder}/generated_files/mesh_b.txt",
                "--output-timing", "${workspaceFolder}/preprocessing_query.json"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake: build"
        },
        {
            "name": "Launch OptiX Raytracer (with preprocessed data)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "powershell.exe",
            "args": [
                "-File",
                "${workspaceFolder}/scripts/conda-run.ps1",
                "${workspaceFolder}/build/bin/Debug/raytracer.exe",
                "--geometry", "${workspaceFolder}/generated_files/query.txt",
                "--points", "${workspaceFolder}/generated_files/uniform_points_10000000.wkt",
                "--runs", "10",
                "--output", "${workspaceFolder}/generated_files/shape_net_timing.json",
                "--no-export"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake: build"
        },
        {
            "name": "Launch OptiX Raytracer Filter-Refine",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "powershell.exe",
            "args": [
                "-File",
                "${workspaceFolder}/scripts/conda-run.ps1",
                "${workspaceFolder}/build/bin/Debug/raytracer_filter_refine.exe",
                "--geometry", "${workspaceFolder}/generated_files/query.txt",
                "--points", "${workspaceFolder}/generated_files/uniform_points_10000000.wkt",
                "--runs", "10",
                "--output", "${workspaceFolder}/generated_files/filter_refine_timing.json",
                "--no-export"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake: build"
        },
        {
            "name": "Attach to Process",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Generate Random Points (Gaussian)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/generate_random_points.py",
            "args": [
                "${workspaceFolder}/generated_files/USADetailedWaterBodies.wkt",
                "10000000",
                "--output",
                "${workspaceFolder}/generated_files/USADetailedWaterBodies_1.wkt",
                "--method",
                "gaussian",
                // "--plot-points",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Generate Random Points (Uniform)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/generate_points_in_bbox.py",
            "args": [
                "--min", "0", "0", "0",
                "--max", "50", "50", "50",
                "--num_points", "10000000",
                "--output", "${workspaceFolder}/generated_files/uniform_points_10000000.wkt",
                "--chunk-size", "10000000"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Generate Points at Object Centers",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/generate_points_in_bbox.py",
            "args": [
                "${workspaceFolder}/generated_files/shape_net.txt",
                "--mode", "object_centers",
                "--num_points", "1000"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Grid Query Benchmark (3x3x3)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/grid_query_benchmark.py",
                "args": [
                "--geometry", "${workspaceFolder}/generated_files/query.txt",
                "--points", "${workspaceFolder}/generated_files/uniform_points_10000000.wkt",
                "--bbox-min", "0", "0", "0",
                "--bbox-max", "50", "50", "50",
                "--raytracer", "powershell.exe",
                "--raytracer-args", "-File", "${workspaceFolder}/scripts/conda-run.ps1", "${workspaceFolder}/build/bin/Debug/raytracer.exe",
                "--output", "${workspaceFolder}/results/grid_benchmark_uniform_high_res.json",
                "--runs", "5",
                "--grid-size", "3", "3", "3"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMake: build"
        },
        {
            "name": "Generate Diagonal Points",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/generate_diagonal_points.py",
            "args": [
                "--n", "10000000",
                "--bbox", "0", "0", "50", "50",
                "--zrange", "0", "50",
                "--sigma", "0.10",
                "--out", "${workspaceFolder}/generated_files/diagonal_points_10000000.wkt",
                "--chunk", "2000000",
                "--precision", "6",
                "--plot"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Mesh Overlap Query",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "powershell.exe",
            "args": [
                "-File",
                "${workspaceFolder}/scripts/conda-run.ps1",
                "${workspaceFolder}/build/bin/Debug/raytracer_mesh_overlap.exe",
                "--mesh1", "${workspaceFolder}/generated_files/mesh_a.txt",
                "--mesh2", "${workspaceFolder}/generated_files/mesh_b.txt",
                "--output", "${workspaceFolder}/generated_files/mesh_overlap_timing.json"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake: build"
        },
        {
            "name": "Generate Test Cubes (100, size 2-7, 50^3)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/generate_test_cubes.py",
            "args": [
                "--num-cubes", "100000",
                "--min-size", "2",
                "--max-size", "7",
                "--extent-x", "0", "100",
                "--extent-y", "0", "100",
                "--extent-z", "0", "100",
                "--output-dir", "${workspaceFolder}/generated_files/Query"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Full Pipeline: Preprocess + Raytracing",
            "configurations": [
                "Preprocess Dataset",
                "Launch OptiX Raytracer (with preprocessed data)"
            ],
            "stopAll": true,
            "preLaunchTask": "CMake: build"
        }
    ]
}

