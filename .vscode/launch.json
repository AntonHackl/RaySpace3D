            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Plot Preprocessing Timings",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/plot_preprocessing_timings.py",
            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
        "name": "Debug Triangulate WKT",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/triangulate_dataset.py",
        "args": [
            "${workspaceFolder}/dtl_cnty.wkt",
            "-o", "${workspaceFolder}/triangles.geojson",
            "--wkt-out", "${workspaceFolder}/triangles.wkt",
            "--quality", "30"
        ],
        "console": "integratedTerminal",
        "justMyCode": true
        },
        {
            "name": "Create Performance Plots",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/create_performance_plots.py",
            "args": [],
