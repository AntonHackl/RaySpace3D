            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/generated_files",
            "environment": [
                {
                    "name": "PATH",
                    "value": "C:\\Users\\anton\\miniconda3\\envs\\rayspace3d_preprocess\\Library\\bin;C:\\Users\\anton\\miniconda3\\envs\\rayspace3d_preprocess\\Scripts;C:\\Users\\anton\\miniconda3\\envs\\rayspace3d_preprocess;${env:PATH}"
